je_kiel_survey = {
	icon = "gfx/interface/icons/event_icons/event_map.dds"

	on_monthly_pulse = {
		effect = {
			change_variable = {
				name = survey_kiel_taken
				add = 1
			}
		}
	}

	#complete = {
		#scope:journal_entry = { is_goal_complete = yes }
	#}

	#on_complete = {
		#remove_modifier = modifier_surveying_kiel
		#trigger_event = { id = canal_events.101 }
	#}

	current_value = {
		value = root.var:survey_kiel_taken
	}

	goal_add_value = {
		value = 12
	}

	invalid = { # If the Panama Canal is being built and you're not the one building it, you've blown it, chief.
		OR = {
			NOT = { has_variable = survey_kiel_taken }
			any_state = {
				state_region = s:STATE_SCHLESWIG_HOLSTEIN
				NOT = { owner = ROOT }
				#any_scope_building = {
					#is_building_type = building_kiel_canal
				#}
			}
		}
	}

	on_invalid = {
		remove_variable = survey_kiel_taken
		remove_modifier = modifier_surveying_kiel
	}

	progressbar = yes

	weight = 10
	should_be_pinned_by_default = yes
}


